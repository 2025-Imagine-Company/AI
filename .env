# Spring <-> AI 서버 간 공유 비밀값 (반드시 동일)
X_AUTH_SHARED_SECRET=CHANGE_ME

# 스프링 콜백 URL (스프링 컨트롤러: POST /model/callback)
SPRING_CALLBACK_URL=http://spring:8080/model/callback

# (선택) 콜백 타임아웃 초
CALLBACK_TIMEOUT=8

# S3 설정 (모델과 프리뷰 업로드용)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=ap-northeast-2
S3_BUCKET_MODELS=audion-models
S3_BUCKET_PREVIEW=audion-preview
# 공개 URL 베이스(CloudFront 등 붙였으면)
PUBLIC_BASE_URL=https://cdn.audion.ai

# XTTS 프리뷰 설정
PREVIEW_TEXT_KO=안녕하세요, 오디온입니다. 이 목소리는 데모로 생성된 프리뷰입니다.
PREVIEW_LANG=ko
